<h1>Welcome {{user.firstName}}</h1>
<div class="row">
  <div class="col s12 m6 l6">
      <h4>Your Stories</h4>
  </div>
  <div class="col s12 m6 l6">
      <h4>Rank:<span style="font-size:30px;">{{rank stories}}</span></h4>
      <div class="progress">
        <div class="determinate bar-color" style="width:{{rank stories}}%;"></div>
      </div>
  </div>
</div>

{{#if stories}}
  <table class="striped responsive-table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Topic</th>
        <th>Date</th>
        <th>Status</th>
        <th>Point</th>
        <th>Check Point</th>
        <th>Edit</th>
        <th>Delete</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href="/stories/show/{{id}}">{{title}}</a></td>
          <td>{{topic}}</td>
          <td>{{formatDate date 'MMMM do YYYY'}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td><span class="">{{point}}</span></td>
          <td><a class="btn blue left-align" href="/stories/rank/{{id}}"><i class="fa fa-line-chart"></i>Point</a></td>
          <td><a class="btn left-align" href="/stories/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a></td>
          <td>
            <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn red"><i class="fa fa-remove"></i> Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not created any stories yet</p>
{{/if}}
